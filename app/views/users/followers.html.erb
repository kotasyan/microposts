<h1>followers</h1>

<!-- followersが空でない場合 -->
<% if @follower_users.any? %>
<div class="row">
    <ol class="followers">
    <% @follower_users.each do |follower| %>
       <li class="folower">
            <div class="col-md-2 col-md-offset-2">
                <!-- Gravatarへのリンクを表示 -->
                <%= link_to gravatar_for(follower, size: 50), follower %>
            </div>
            <!-- ユーザーの詳細画面へのリンクを表示 -->
            <span class="user col-md-4">
                <%= link_to follower.name, follower %>
            </span>
        </li>
    <% end %>
    </ol>
<% end %>
</div>